<UserControl x:Class="MetalizationSystem.Views.ParameterList"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
               xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:local="clr-namespace:MetalizationSystem.Views" xmlns:locals="clr-namespace:MetalizationSystem" 
             xmlns:viewmodels="clr-namespace:MetalizationSystem.ViewModels" d:DataContext="{d:DesignInstance Type=viewmodels:ParameterListViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel Background="AliceBlue">
        <Expander
          HorizontalAlignment="Stretch"
          Header="配液工作站">
            <StackPanel Margin="5" Background="White">
                <StackPanel Orientation="Horizontal">
                    <Label Margin="35,3,0,0" Content="IP:"/>
                    <TextBox Margin="0" Text="{Binding OrderInfo.LiquidDispensing.IP}" Width="200"/>
                    <Label Margin="35,3,0,0" Content="Port:"/>
                    <TextBox Margin="0" Text="{Binding OrderInfo.LiquidDispensing.Port}" Width="30"/>                   
                </StackPanel>
                <StackPanel Height="10"/>
                <StackPanel Margin="5" Orientation="Horizontal"  HorizontalAlignment="Left">
                    <StackPanel Width="30"/>
                    <GroupBox
Width="300"
materialDesign:ColorZoneAssist.Mode="SecondaryMid"
Header="溶剂"
Style="{StaticResource MaterialDesignCardGroupBox}">
                        <GroupBox.HeaderTemplate>
                            <DataTemplate>
                                <StackPanel
      Orientation="Horizontal">
                                    <materialDesign:PackIcon
        Width="32"
        Height="32"
        VerticalAlignment="Center"
        Kind="BottlePop" />
                                    <TextBlock
        Margin="8,0,0,0"
        VerticalAlignment="Center"
        Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
        Text="{Binding}" />
                                </StackPanel>
                            </DataTemplate>
                        </GroupBox.HeaderTemplate>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>
                            <Label Grid.Row="0" Grid.Column="0" Content="序号" HorizontalAlignment="Center"/>
                            <Label Grid.Row="1" Grid.Column="0" Content="1" HorizontalAlignment="Center"/>
                            <Label Grid.Row="2" Grid.Column="0" Content="2" HorizontalAlignment="Center"/>
                            <Label Grid.Row="3" Grid.Column="0" Content="3" HorizontalAlignment="Center"/>
                            <Label Grid.Row="4" Grid.Column="0" Content="4" HorizontalAlignment="Center"/>
                            <Label Grid.Row="0" Grid.Column="1" Content="名称" HorizontalAlignment="Center"/>
                            <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding OrderInfo.LiquidDispensing.Solvent[1].Name}" HorizontalAlignment="Center"/>
                            <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding OrderInfo.LiquidDispensing.Solvent[2].Name}" HorizontalAlignment="Center"/>
                            <TextBox Grid.Row="3" Grid.Column="1" Text="{Binding OrderInfo.LiquidDispensing.Solvent[3].Name}" HorizontalAlignment="Center"/>
                            <TextBox Grid.Row="4" Grid.Column="1" Text="{Binding OrderInfo.LiquidDispensing.Solvent[4].Name}" HorizontalAlignment="Center"/>
                            <Label Grid.Row="0" Grid.Column="2" Content="余量" HorizontalAlignment="Center"/>
                            <TextBox Grid.Row="1" Grid.Column="2" Text="{Binding OrderInfo.LiquidDispensing.Solvent[1].Residue}" HorizontalAlignment="Center"/>
                            <TextBox Grid.Row="2" Grid.Column="2" Text="{Binding OrderInfo.LiquidDispensing.Solvent[2].Residue}" HorizontalAlignment="Center"/>
                            <TextBox Grid.Row="3" Grid.Column="2" Text="{Binding OrderInfo.LiquidDispensing.Solvent[3].Residue}" HorizontalAlignment="Center"/>
                            <TextBox Grid.Row="4" Grid.Column="2" Text="{Binding OrderInfo.LiquidDispensing.Solvent[4].Residue}" HorizontalAlignment="Center"/>
                            <Label Grid.Row="0" Grid.Column="3" Content="Modbus地址" HorizontalAlignment="Center"/>
                            <TextBox Grid.Row="1" Grid.Column="3" Text="{Binding OrderInfo.LiquidDispensing.Solvent[1].ModbusId}" HorizontalAlignment="Center"/>
                            <TextBox Grid.Row="2" Grid.Column="3" Text="{Binding OrderInfo.LiquidDispensing.Solvent[2].ModbusId}" HorizontalAlignment="Center"/>
                            <TextBox Grid.Row="3" Grid.Column="3" Text="{Binding OrderInfo.LiquidDispensing.Solvent[3].ModbusId}" HorizontalAlignment="Center"/>
                            <TextBox Grid.Row="4" Grid.Column="3" Text="{Binding OrderInfo.LiquidDispensing.Solvent[4].ModbusId}" HorizontalAlignment="Center"/>
                        </Grid>
                    </GroupBox>
                    <StackPanel Width="30"/>
                    <GroupBox
Width="300"
materialDesign:ColorZoneAssist.Mode="SecondaryMid"
Header="过渡液"
Style="{StaticResource MaterialDesignCardGroupBox}">
                        <GroupBox.HeaderTemplate>
                            <DataTemplate>
                                <StackPanel
      Orientation="Horizontal">
                                    <materialDesign:PackIcon
        Width="32"
        Height="32"
        VerticalAlignment="Center"
        Kind="BabyBottle" />
                                    <TextBlock
        Margin="8,0,0,0"
        VerticalAlignment="Center"
        Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
        Text="{Binding}" />
                                </StackPanel>
                            </DataTemplate>
                        </GroupBox.HeaderTemplate>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                                <ColumnDefinition Width="70.5"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>
                            <Label Grid.Row="0" Grid.Column="0" Content="序号" HorizontalAlignment="Center"/>
                            <Label Grid.Row="1" Grid.Column="0" Content="1" HorizontalAlignment="Center"/>
                            <Label Grid.Row="2" Grid.Column="0" Content="2" HorizontalAlignment="Center"/>
                            <Label Grid.Row="3" Grid.Column="0" Content="3" HorizontalAlignment="Center"/>
                            <Label Grid.Row="4" Grid.Column="0" Content="4" HorizontalAlignment="Center"/>
                            <Label Grid.Row="5" Grid.Column="0" Content="5" HorizontalAlignment="Center"/>
                            <Label Grid.Row="0" Grid.Column="1" Content="名称" HorizontalAlignment="Center"/>
                            <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding OrderInfo.LiquidDispensing.TransitionFluid[1].Name}" HorizontalAlignment="Center"/>
                            <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding OrderInfo.LiquidDispensing.TransitionFluid[2].Name}" HorizontalAlignment="Center"/>
                            <TextBox Grid.Row="3" Grid.Column="1" Text="{Binding OrderInfo.LiquidDispensing.TransitionFluid[3].Name}" HorizontalAlignment="Center"/>
                            <TextBox Grid.Row="4" Grid.Column="1" Text="{Binding OrderInfo.LiquidDispensing.TransitionFluid[4].Name}" HorizontalAlignment="Center"/>
                            <TextBox Grid.Row="5" Grid.Column="1" Text="{Binding OrderInfo.LiquidDispensing.TransitionFluid[5].Name}" HorizontalAlignment="Center"/>
                            <Label Grid.Row="0" Grid.Column="2" Content="余量" HorizontalAlignment="Center"/>
                            <TextBox Grid.Row="1" Grid.Column="2" Text="{Binding OrderInfo.LiquidDispensing.TransitionFluid[1].Residue}" HorizontalAlignment="Center"/>
                            <TextBox Grid.Row="2" Grid.Column="2" Text="{Binding OrderInfo.LiquidDispensing.TransitionFluid[2].Residue}" HorizontalAlignment="Center"/>
                            <TextBox Grid.Row="3" Grid.Column="2" Text="{Binding OrderInfo.LiquidDispensing.TransitionFluid[3].Residue}" HorizontalAlignment="Center"/>
                            <TextBox Grid.Row="4" Grid.Column="2" Text="{Binding OrderInfo.LiquidDispensing.TransitionFluid[4].Residue}" HorizontalAlignment="Center"/>
                            <TextBox Grid.Row="5" Grid.Column="2" Text="{Binding OrderInfo.LiquidDispensing.TransitionFluid[5].Residue}" HorizontalAlignment="Center"/>
                            <Label Grid.Row="0" Grid.Column="3" Content="Modbus地址" HorizontalAlignment="Center"/>
                            <TextBox Grid.Row="1" Grid.Column="3" Text="{Binding OrderInfo.LiquidDispensing.TransitionFluid[1].ModbusId}" HorizontalAlignment="Center"/>
                            <TextBox Grid.Row="2" Grid.Column="3" Text="{Binding OrderInfo.LiquidDispensing.TransitionFluid[2].ModbusId}" HorizontalAlignment="Center"/>
                            <TextBox Grid.Row="3" Grid.Column="3" Text="{Binding OrderInfo.LiquidDispensing.TransitionFluid[3].ModbusId}" HorizontalAlignment="Center"/>
                            <TextBox Grid.Row="4" Grid.Column="3" Text="{Binding OrderInfo.LiquidDispensing.TransitionFluid[4].ModbusId}" HorizontalAlignment="Center"/>
                            <TextBox Grid.Row="5" Grid.Column="3" Text="{Binding OrderInfo.LiquidDispensing.TransitionFluid[5].ModbusId}" HorizontalAlignment="Center"/>
                        </Grid>
                    </GroupBox>

                </StackPanel>
            </StackPanel>
          
        </Expander>         
        <Separator Margin="3"/>
       
        <Expander
HorizontalAlignment="Stretch"
Header="过渡槽">
            <StackPanel>      
                <DataGrid  ItemsSource="{Binding ReactionTankInfos}" Style="{StaticResource  MaterialDesignDataGrid}" ColumnHeaderStyle="{StaticResource  MaterialDesignDataGridColumnHeader }" CellStyle="{StaticResource MaterialDesignDataGridCell}" AutoGenerateColumns="False" Background="White" >
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" Binding="{ Binding Path = Id}" IsReadOnly="True"/>
                        <DataGridTextColumn Header="Name" Binding="{ Binding Path = Name}"/>
                        <DataGridTextColumn Header="加液IO" Binding="{ Binding Path =  ChargingIo}"/>
                        <DataGridTextColumn Header="排液IO" Binding="{ Binding Path = DrainageIo}"/>
                        <DataGridTextColumn Header="电磁阀IO" Binding="{ Binding Path = SolenoidValveIo}"/>
                        <DataGridTextColumn Header="加热IO" Binding="{ Binding Path = HeatingIo}"/>
                        <DataGridTextColumn Header="液位IO" Binding="{ Binding Path = LiquidLevelIo}"/>
                        <DataGridTextColumn Header="温度IO" Binding="{ Binding Path = TemperatureId}"/>
                        <DataGridTextColumn Header="IP" Binding="{ Binding Path = IP}"/>
                        <DataGridTextColumn Header="Port" Binding="{ Binding Path = Port}"/>                 
                        <DataGridTextColumn Header="温度" Binding="{ Binding Path = Temperature}"/>
                        <DataGridTextColumn Header="时间" Binding="{ Binding Path = Time}"/>
                        <DataGridTextColumn Header="转速" Binding="{ Binding Path = Speed}"/>

                    </DataGrid.Columns>
                </DataGrid>

            </StackPanel>


        </Expander>
        <Separator Margin="3"/>
        <Expander
HorizontalAlignment="Stretch"
Header="烘干箱">
            <StackPanel>
                <StackPanel Orientation="Horizontal" Background="White">
                    <StackPanel Width="20"/>
                    <Label Margin="5" Content="串口号:"  Height="14"/>
                    <ComboBox ItemsSource="{Binding Ports}" Text="{Binding OrderInfo.DryBox.Port }" Style="{StaticResource MaterialDesignComboBox}" Width="100"/>
                    <StackPanel Width="20"/>
                    <Label Content="温度:" Height="14"/>
                    <TextBox Text="{Binding OrderInfo.DryBox.Temperature}" Width="80" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="10" Foreground="Black"/>
                    <Label Content=" ℃"  Height="14"/>
                    <StackPanel Width="20"/>
                    <Label Content="时间:"  Height="14"/>
                    <TextBox Text="{Binding OrderInfo.DryBox.Time}" Width="80" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="10" Foreground="Black"/>
                    <Label Content=" min"  Height="14"/>
                </StackPanel>              
            </StackPanel>   
        </Expander>
        <Separator Margin="3"/>
        <Expander
HorizontalAlignment="Stretch"
Header="轴、机器臂">
            <StackPanel Orientation="Horizontal">
                <StackPanel Width="35"/>
                <GroupBox
Width="300"
materialDesign:ColorZoneAssist.Mode="SecondaryMid"
Header="直线电机"
Style="{StaticResource MaterialDesignCardGroupBox}">
                    <GroupBox.HeaderTemplate>
                        <DataTemplate>
                            <StackPanel
      Orientation="Horizontal">
                                <materialDesign:PackIcon
        Width="32"
        Height="32"
        VerticalAlignment="Center"
        Kind="Motor" />
                                <TextBlock
        Margin="8,0,0,0"
        VerticalAlignment="Center"
        Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
        Text="{Binding}" />
                            </StackPanel>
                        </DataTemplate>
                    </GroupBox.HeaderTemplate>
                    <StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <Label Content="速度  : " Height="14" />
                            <TextBox Text="{Binding OrderInfo.LineMotor.Speed}" Width="60"/>
                            <Label Content=" mm/s: " Height="14" />
                        </StackPanel>
                        <StackPanel Height="5"/>
                        <StackPanel Orientation="Horizontal">
                            <Label Content="加速度: " Height="14" />
                            <TextBox Text="{Binding OrderInfo.LineMotor.Acc}" Width="60"/>
                            <Label Content=" mm/s²: " Height="14" />
                        </StackPanel>
                        <StackPanel Height="5"/>
                        <StackPanel Orientation="Horizontal">
                            <Label Content="减速度: " Height="14" />
                            <TextBox Text="{Binding OrderInfo.LineMotor.Dcc}" Width="60"/>
                            <Label Content=" mm/s²: " Height="14" />
                        </StackPanel>
                    </StackPanel>
                </GroupBox>
                <StackPanel Width="35"/>
                <GroupBox
Width="300"
materialDesign:ColorZoneAssist.Mode="SecondaryMid"
Header="机器臂"
Style="{StaticResource MaterialDesignCardGroupBox}">
                    <GroupBox.HeaderTemplate>
                        <DataTemplate>
                            <StackPanel
      Orientation="Horizontal">
                                <materialDesign:PackIcon
        Width="32"
        Height="32"
        VerticalAlignment="Center"
        Kind="Robot" />
                                <TextBlock
        Margin="8,0,0,0"
        VerticalAlignment="Center"
        Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
        Text="{Binding}" />
                            </StackPanel>
                        </DataTemplate>
                    </GroupBox.HeaderTemplate>
                    <StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <Label Content="速度  : " Height="14" />
                            <TextBox Text="{Binding OrderInfo.Robot.Speed}" Width="60"/>
                            <Label Content=" mm/s: " Height="14" />
                        </StackPanel>
                        <StackPanel Height="5"/>                      
                    </StackPanel>
                </GroupBox>
            </StackPanel>
        </Expander>
        <Separator Margin="3"/>
        <StackPanel HorizontalAlignment="Center" >
            <locals:ButtonEx Margin="5"  Command="{Binding SaveCommand}"   Grid.Column="2" Content="Save" FontFamily="kaiti" FontSize="10" Foreground="#4834d4" OnMouseOverForegroundColor="#4834d4" ImageSize="40"
PathData="M725.333333 0c70.656 0 298.666667 228.096 298.666667 298.666667v597.333333a128 128 0 0 1-128 128H128a128 128 0 0 1-128-128V128a128 128 0 0 1 128-128zM170.666667 85.333333H128a42.666667 42.666667 0 0 0-42.666667 42.666667v768a42.666667 42.666667 0 0 0 42.666667 42.666667h768a42.666667 42.666667 0 0 0 42.666667-42.666667V298.666667c0-10.752-39.850667-56.448-85.333334-102.826667V341.333333a128 128 0 0 1-120.490666 127.786667L725.333333 469.333333H298.666667a128 128 0 0 1-127.786667-120.490666L170.666667 341.333333V85.333333z m554.666666 682.666667a42.666667 42.666667 0 0 1 0 85.333333H298.666667a42.666667 42.666667 0 0 1 0-85.333333h426.666666z m-128-170.666667a42.666667 42.666667 0 0 1 0 85.333334H298.666667a42.666667 42.666667 0 0 1 0-85.333334h298.666666z m128-512H256v256a42.666667 42.666667 0 0 0 37.674667 42.368L298.666667 384h426.666666a42.666667 42.666667 0 0 0 42.368-37.674667L768 341.333333V114.858667c-20.821333-17.92-36.821333-29.525333-42.666667-29.525334z">
            </locals:ButtonEx>
        </StackPanel>
    </StackPanel>
</UserControl>
