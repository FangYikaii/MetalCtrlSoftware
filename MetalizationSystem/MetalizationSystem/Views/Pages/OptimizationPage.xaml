                                 <DataGridTextColumn Header="MetalBType" Binding="{ Binding Path = MetalBType}" Visibility="{Binding DataContext.OxideVisibility, ElementName=BayesDataGrid}"/>
                                <DataGridTextColumn Header="MetalMolarRatio" Binding="{ Binding Path = MetalMolarRatio}" Visibility="{Binding DataContext.OxideVisibility, ElementName=BayesDataGrid}"/>
                                <DataGridTextColumn Header="Coverage" Binding="{ Binding Path = Coverage}"/>
                                <DataGridTextColumn Header="Uniformity" Binding="{ Binding Path = Uniformity}"/>
                                <DataGridTextColumn Header="Adhesion" Binding="{ Binding Path = Adhesion}"/>
                            </DataGrid.Columns>
                        </DataGrid>
                        <Border Grid.Row="3" Margin="5" BorderBrush="Black" BorderThickness="1" CornerRadius="5">
                            <Grid Margin="0,0,0,10">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <Label Grid.Row="0" Content="Bezier Curve" Margin="0,0,0,5"  HorizontalAlignment="Center" Foreground="Black"/>
                                <ComboBox Grid.Row="1" Margin="5,0,0,0" HorizontalAlignment="Left" SelectedIndex="{Binding BezierComboxSelectedIndex}" Style="{DynamicResource MaterialDesignComboBox}">
                                <ComboBoxItem IsSelected="True">Coverage</ComboBoxItem>
                                <ComboBoxItem>Uniformity</ComboBoxItem>
                                <ComboBoxItem>Adhesion</ComboBoxItem>
                                    <i:Interaction.Triggers>
                                        <i:EventTrigger EventName="SelectionChanged">
                                            <i:InvokeCommandAction Command="{Binding BezierComboxSelectionChangedCommand}" />
                                        </i:EventTrigger>
                                    </i:Interaction.Triggers>
                                </ComboBox>
                            <Image Grid.Row="2" Source="{Binding BezierCurveImagePath}" Stretch="Fill" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Grid>
                        </Border>
                        <Label Grid.Row="4" Margin="10" Grid.Column="2" FontSize="20" FontWeight="Bold" Content="{Binding LblStatus}" HorizontalAlignment="Left" Foreground="Black" />
                    </Grid>
                </Border>
            </Grid>

            <Grid Grid.Column="2" Margin="5" Visibility="{Binding DataPlotVisibility}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Label Grid.Row="0" Margin="5" Grid.Column="2" FontSize="20" FontWeight="Bold" Content="{Binding LblDataVisualization}" HorizontalAlignment="Center" Foreground="Black" />

                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid Grid.Column="0" Margin="0,0,0,0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Label Content="UMAP" Margin="0,0,0,5" HorizontalAlignment="Center" Foreground="Black"/>
                        <ComboBox Grid.Row="1" Margin="5,0,0,0" HorizontalAlignment="Left" SelectedIndex="{Binding UmapComboxSelectedIndex}" Style="{DynamicResource MaterialDesignComboBox}">
                            <ComboBoxItem IsSelected="True">Coverage</ComboBoxItem>
                            <ComboBoxItem>Uniformity</ComboBoxItem>
                            <ComboBoxItem>Adhesion</ComboBoxItem>
                            <i:Interaction.Triggers>
                                <i:EventTrigger EventName="SelectionChanged">
                                    <i:InvokeCommandAction Command="{Binding UmapComboxSelectionChangedCommand}" />
                                </i:EventTrigger>
                            </i:Interaction.Triggers>
                        </ComboBox>
                        <Border Grid.Row="2"  Margin="5" BorderBrush="Black" BorderThickness="2" CornerRadius="5">
                            <Image Source="{Binding UmapImagePath}" Stretch="Uniform" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </Grid>

                    <Grid Grid.Column="1" Margin="0,0,0,0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Label Content="Pareto" Margin="0,0,0,5" HorizontalAlignment="Center" Foreground="Black"/>
                        <Border Grid.Row="1" Margin="5" BorderBrush="Black" BorderThickness="2" CornerRadius="5">
                            <Image Margin="5" Source="{Binding ParetoImagePath}" Stretch="Uniform" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </Grid>
                </Grid>
                <Grid Grid.Row="2" Margin="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid Grid.Column="0" Margin="5,0,5,0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Label Content="iter value" Margin="0,0,0,5" HorizontalAlignment="Center" Foreground="Black"/>
                        <Border Grid.Row="1" Margin="5" BorderBrush="Black" BorderThickness="2" CornerRadius="5">
                            <Image Margin="5" Source="{Binding IterValueImagePath}" Stretch="Uniform" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </Grid>
                </Grid>
            </Grid>
        </Grid>
    </Grid>
</UserControl>