<UserControl x:Class="MetalizationSystem.Views.UC.IoOutputBtn"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:local="clr-namespace:MetalizationSystem.Views.UC"
             mc:Ignorable="d">   
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="40" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Label Margin="1" Name="Lab" Style="{StaticResource roundStyle}" Background="BlueViolet" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="White"/>
        <Button Margin="1" Name="Btn" Grid.Column="1" Click="Btn_Click" Style="{StaticResource dgButton}"  Template="{StaticResource buttonTemplate}" BorderBrush="LightBlue"  Background="LightBlue"/>

    </Grid>
</UserControl>
