<UserControl x:Class="MetalizationSystem.Views.UC.ExpData"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MetalizationSystem.Views.UC" xmlns:locals="clr-namespace:MetalizationSystem"
             mc:Ignorable="d" 
             d:DesignHeight="650" d:DesignWidth="00">
    <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="320"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
        <Border  Grid.Column="0" Margin="10" BorderBrush="Black" BorderThickness="2" CornerRadius="5">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Border  Grid.Row="0"  Margin="5"  BorderBrush="Black" BorderThickness="2" CornerRadius="5">
                    <StackPanel  Margin="10">
                        <StackPanel Height="5"/>
                        <Label Margin="10" Grid.Column="2" FontSize="20" FontWeight="Bold" Content="Selected Exp Data" HorizontalAlignment="Left" Foreground="Black" />
                        <StackPanel Height="5"/>
                        <StackPanel Orientation="Horizontal" >
                            <Label Content="Proj: " Width="100"/>
                            <TextBox Text="{Binding ProjName}" Width="150" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="10" Foreground="Black"/>
                        </StackPanel>
                        <StackPanel Height="5"/>
                        <StackPanel Orientation="Horizontal" >
                            <Label Content="Exp Id:" Width="100"/>
                            <TextBox Text="{Binding ExpId}" Width="150" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="10" Foreground="Black"/>
                        </StackPanel>
                        <StackPanel Height="5"/>
                        <StackPanel Orientation="Horizontal" >
                            <Label Content="Formula Id:" Width="100"/>
                            <TextBox Text="{Binding FormulaId}" Width="150" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="10" Foreground="Black"/>
                        </StackPanel>
                        <StackPanel Height="5"/>
                        <StackPanel Orientation="Horizontal" >
                            <Label Content="Formula Name:" Width="100"/>
                            <TextBox Text="{Binding FormulaName}" Width="150" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="10" Foreground="Black"/>
                        </StackPanel>
                        <StackPanel Height="5"/>
                        <StackPanel Orientation="Horizontal" >
                            <Label Content="BarCode: " Width="100"/>
                            <TextBox Text="{Binding BarCode}" Width="150" HorizontalAlignment="Left" VerticalAlignment="Top" AcceptsReturn="True" FontSize="10" Foreground="Black"/>
                        </StackPanel>
                        <StackPanel Height="5"/>
                        <StackPanel Orientation="Horizontal" >
                            <Label Content="Concentration:" Width="100"/>
                            <TextBox Text="{Binding Concentration}" Width="150" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="10" Foreground="Black"/>
                        </StackPanel>
                        <StackPanel Height="5"/>
                        <StackPanel Orientation="Horizontal" >
                            <Label Content="Temperature:" Width="100"/>
                            <TextBox Text="{Binding Temperature}" Width="150" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="10" Foreground="Black"/>
                        </StackPanel>
                        <StackPanel Height="5"/>
                        <StackPanel Orientation="Horizontal" >
                            <Label Content="Soak Time:" Width="100"/>
                            <TextBox Text="{Binding SoakTime}" Width="150" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="10" Foreground="Black"/>
                        </StackPanel>
                        <StackPanel Height="5"/>
                        <StackPanel Orientation="Horizontal" >
                            <Label Content="PH: " Width="100"/>
                            <TextBox Text="{Binding PH}" Width="150" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="10" Foreground="Black"/>
                        </StackPanel>
                        <StackPanel Height="5"/>
                    </StackPanel>
                </Border>
                <Border  Grid.Row="1" Margin="5" BorderBrush="Black" BorderThickness="2" CornerRadius="5">
                    <StackPanel  Margin="10" >
                        <StackPanel Height="5"/>
                        <Label Margin="10" Grid.Column="2" FontSize="20" FontWeight="Bold" Content="Image Data" HorizontalAlignment="Left" Foreground="Black" />
                        <StackPanel Height="5"/>
                        <StackPanel Orientation="Horizontal" >
                            <Label Content="Coverage: " Width="100"/>
                            <TextBox Text="{Binding Coverage}" Width="150" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="10" Foreground="Black"/>
                        </StackPanel>
                        <StackPanel Height="5"/>
                        <StackPanel Orientation="Horizontal" >
                            <Label Content="Uniformity: " Width="100"/>
                            <TextBox Text="{Binding Uniformity}" Width="150" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="10" Foreground="Black"/>
                        </StackPanel>
                        <StackPanel Height="5"/>
                        <locals:ButtonEx Margin="5"  Click="btn_CoverageUniformity_Click"   Grid.Column="2" Content="Save" FontFamily="kaiti" FontSize="10" Foreground="#4834d4" OnMouseOverForegroundColor="#4834d4" ImageSize="40"
       PathData="M400.384 677.376L278.528 428.032c-8.192-16.384-1.024-35.84 14.848-44.032l47.616-23.552c16.384-8.192 35.84-1.024 44.032 14.848l72.192 147.456L904.704 128c13.312-12.288 34.304-10.752 46.592 2.56l35.328 39.936c12.288 13.824 10.752 34.304-2.56 46.592l-532.48 470.528c-15.872 14.336-41.472 9.216-51.2-10.24z">
                        </locals:ButtonEx>
                        <StackPanel Height="5"/>
                        <StackPanel Orientation="Horizontal" >
                            <Label Content="CreateTime: " Width="100"/>
                            <TextBox Text="{Binding CreateTime}" Width="150" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="10" Foreground="Black"/>
                        </StackPanel>
                        <StackPanel Height="5"/>
                        <StackPanel Orientation="Horizontal" >
                            <Label Content="UpdateTime: " Width="100"/>
                            <TextBox Text="{Binding UpdateTime}" Width="150" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="10" Foreground="Black"/>
                        </StackPanel>
                        <StackPanel Height="5"/>
                    </StackPanel>
                </Border>
                <Border  Grid.Row="2" Margin="5" BorderBrush="Black" BorderThickness="2" CornerRadius="5">
                    <StackPanel  Margin="10" >
                        <StackPanel Height="5"/>
                        <Label Margin="10" Grid.Column="2" FontSize="20" FontWeight="Bold" Content="Input Data" HorizontalAlignment="Left" Foreground="Black" />
                        <StackPanel Height="5"/>
                        <StackPanel Orientation="Horizontal" >
                            <Label Content="Adhension: " Width="100" Margin="0,5,0,0"/>
                            <TextBox Text="{Binding AdhensionValue}" Width="150" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="10" Foreground="Black"/>
                        </StackPanel>
                        <StackPanel Height="5"/>
                        <locals:ButtonEx Margin="5"  Click="btn_Adhension_Click"   Grid.Column="2" Content="Add" FontFamily="kaiti" FontSize="10" Foreground="#4834d4" OnMouseOverForegroundColor="#4834d4" ImageSize="40"
       PathData="M400.384 677.376L278.528 428.032c-8.192-16.384-1.024-35.84 14.848-44.032l47.616-23.552c16.384-8.192 35.84-1.024 44.032 14.848l72.192 147.456L904.704 128c13.312-12.288 34.304-10.752 46.592 2.56l35.328 39.936c12.288 13.824 10.752 34.304-2.56 46.592l-532.48 470.528c-15.872 14.336-41.472 9.216-51.2-10.24z">
                        </locals:ButtonEx>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>

        <Grid Grid.Column="2" Margin="5">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Label Grid.Row="0" Margin="10" Grid.Column="2" FontSize="25" FontWeight="Bold" Content="Data Visualization" HorizontalAlignment="Center" Foreground="Black" />

            <Grid Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0" Margin="0,0,0,10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Label Content="Original Image" Margin="0,0,0,5"  HorizontalAlignment="Center" Foreground="Black"/>
                    <Border Grid.Row="1" Margin="5" BorderBrush="Black" BorderThickness="2" CornerRadius="5">
                        <Image Source="{Binding OriginalImagePath}" Stretch="Fill" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                </Grid>
            </Grid>

            <Grid Grid.Row="2" Margin="5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Grid Grid.Column="0" Margin="0,0,5,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Label Content="Processed Image" Margin="0,0,0,5" 
                HorizontalAlignment="Center" Foreground="Black"/>
                    <Border Grid.Row="1" Margin="5" BorderBrush="Black" BorderThickness="2" CornerRadius="5">
                        <Image Margin="5" Source="{Binding ProcessedImagePath}" Stretch="Uniform" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                </Grid>

                <Grid Grid.Column="1" Margin="5,0,5,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Label Content="Coverage Image" Margin="0,0,0,5" HorizontalAlignment="Center" Foreground="Black"/>
                    <Border Grid.Row="1" Margin="5" BorderBrush="Black" BorderThickness="2" CornerRadius="5">
                        <Image Margin="5" Source="{Binding CoverageImagePath}" Stretch="Uniform" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                </Grid>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
