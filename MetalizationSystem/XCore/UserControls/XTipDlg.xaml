<Window x:Class="XCore.XTipDlg"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:XCore"
        mc:Ignorable="d"
        Title="XTipDlg" Height="100" Width="400">
    <Grid >
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <TextBlock x:Name="tbox" Margin="5" />
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Button x:Name="btnOK" Margin="5" Content="OK" Click="btnOK_Click"  Background="Green"/>
            <Button x:Name="btnCancel" Margin="5" Grid.Column="1" Content="Cancel"  Click="btnCancel_Click"/>
        </Grid>
    </Grid>
</Window>
