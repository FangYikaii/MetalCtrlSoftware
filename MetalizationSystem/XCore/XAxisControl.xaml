<UserControl x:Class="XCore.XAxisControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:XCore"
             mc:Ignorable="d" 
             d:DesignHeight="305" d:DesignWidth="450"> 
    <UserControl.Resources>
        <ResourceDictionary Source="/Style/TabControlStyle.xaml"/>
    </UserControl.Resources>
    <TabControl>
        <TabItem Header="使能原点">
            
        </TabItem>
        <TabItem Header="手动控制">        
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="140"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <GroupBox Header="轴调试">
                    <StackPanel>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>
                            <Button x:Name="btnXback" Margin="1" Grid.Row="1" Width="40" Height="40" />
                            <Button x:Name="btnXForward" Margin="1" Grid.Column="2" Grid.Row="1" Width="40" Height="40" />
                            <Button x:Name="btnYback" Margin="1" Grid.Column="1" Width="40" Height="40"/>
                            <Button x:Name="btnYForward" Margin="1" Grid.Column="1" Grid.Row="2" Width="40" Height="40"/>
                        </Grid>
                        <StackPanel Height="5"/>
                        <Grid >
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>
                            <Button x:Name="btnZback" Margin="1" Grid.Row="1" Width="40" Height="40"/>
                            <Button x:Name="btnZForward" Margin="1" Grid.Column="2" Grid.Row="1" Width="40" Height="40" />
                            <Button x:Name="btnRback" Margin="1" Grid.Column="1" Width="40" Height="40"/>
                            <Button x:Name="btnRForward" Margin="1" Grid.Column="1" Grid.Row="2" Width="40" Height="40"/>
                        </Grid>
                    </StackPanel>
                </GroupBox>               
                <StackPanel Grid.Column="1">
                    <GroupBox Header="当前位置">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>
                            <Label Grid.Row="1" Content="编码器" Foreground="Blue"/>
                            <Label Grid.Row="2" Content="规划器" Foreground="Blue"/>
                            <Label Grid.Column="1" Content="X(mm)" Foreground="Blue"/>
                            <Label x:Name="labXEncoder" Grid.Column="1" Grid.Row="1"  Content="0.000"  Foreground="Green"/>
                            <Label x:Name="labXPlanner" Grid.Column="1" Grid.Row="2"  Content="0.000" />
                            <Label Grid.Column="2" Content="X(mm)" Foreground="Blue"/>
                            <Label x:Name="labYEncoder" Grid.Column="2" Grid.Row="1"  Content="0.000"  Foreground="Green"/>
                            <Label x:Name="labYPlanner" Grid.Column="2" Grid.Row="2"  Content="0.000" />
                            <Label Grid.Column="3" Content="X(mm)" Foreground="Blue"/>
                            <Label x:Name="labZEncoder" Grid.Column="3" Grid.Row="1"  Content="0.000"  Foreground="Green"/>
                            <Label x:Name="labZPlanner" Grid.Column="3" Grid.Row="2"  Content="0.000" />
                            <Label Grid.Column="4" Content="X(mm)" Foreground="Blue"/>
                            <Label x:Name="labREncoder" Grid.Column="4" Grid.Row="1"  Content="0.000"  Foreground="Green"/>
                            <Label x:Name="labRPlanner" Grid.Column="4" Grid.Row="2"  Content="0.000" />
                        </Grid>

                    </GroupBox>
                    <GroupBox Header="模式/参数">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <RadioButton x:Name="rBtnJob" Margin="0,5" Content="Job" Width="45"/>
                                <StackPanel Width="5"/>
                                <ComboBox x:Name="cBoxJobSpeed" Width="50">
                                    <ComboBoxItem Content="1"/>
                                    <ComboBoxItem Content="2"/>
                                    <ComboBoxItem Content="5"/>
                                    <ComboBoxItem Content="10"/>
                                    <ComboBoxItem Content="50"/>
                                    <ComboBoxItem Content="100"/>
                                </ComboBox>
                                <Label Content="mm/s"/>
                            </StackPanel>
                            <StackPanel Height="5"/>
                            <StackPanel Orientation="Horizontal">
                                <RadioButton x:Name="rBtnAbs" Margin="0,5" Content="Abs" Width="45"/>
                                <StackPanel Width="5"/>
                                <ComboBox x:Name="cBoxAbsSpeed" Width="50">
                                    <ComboBoxItem Content="0.1"/>
                                    <ComboBoxItem Content="0.2"/>
                                    <ComboBoxItem Content="0.5"/>
                                    <ComboBoxItem Content="1"/>
                                    <ComboBoxItem Content="2"/>
                                    <ComboBoxItem Content="5"/>
                                    <ComboBoxItem Content="10"/>
                                    <ComboBoxItem Content="50"/>
                                    <ComboBoxItem Content="100"/>
                                </ComboBox>
                                <Label Content="mm"/>
                            </StackPanel>
                            <StackPanel Height="5"/>
                        </StackPanel>
                    </GroupBox>
                    <GroupBox Header="示教/运动">
                        <StackPanel Orientation="Horizontal">
                            <Label Content="目标点位" Foreground="Blue"/>
                            <StackPanel Width="10"/>
                            <ComboBox x:Name="cBoxPositon" Width="100"/>
                            <StackPanel Width="10"/>
                            <Button x:Name="btnSavePositon" Click="btnSavePositon_Click" Content="保存"/>
                            <StackPanel Width="30"/>
                            <Button x:Name="btnMovePositon" Click="btnMovePositon_Click"  Content="运动"/>
                        </StackPanel>
                    </GroupBox>
                </StackPanel>
            </Grid>
        </TabItem>
        <TabItem Header="点位数据">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition Width="50"/>
                </Grid.ColumnDefinitions>
                <DataGrid x:Name="dgPosition"/>
                <Button x:Name="btnSaveDg" Grid.Column="1" Content="保存" Click="btnSaveDg_Click"/>
            </Grid>           
        </TabItem>
    </TabControl>
   
</UserControl>
